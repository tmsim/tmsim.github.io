<script> <!-- This script must stay below tables to work -->
   function initialize(){
       hidetape(2);
       hidetape(3);
   }
   function hidetape(num){
       if(num === 2){
           $("#table2group").hide();
       }
       if(num === 3){
           $("#table3group").hide();
       }
   }
   function showtape(num){
       if(num === 2){
           $("#table2group").show();
       }
       if(num === 3){
           $("#table3group").show();
       }
   }
   window.onload = initialize();
</script>

